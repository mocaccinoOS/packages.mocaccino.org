<title>{{$reponame}} Packages</title>
</head>


<body>
<section class="hero is-mobile">
  <div class="hero-body">
    <div class="container ">
      <div class="columns is-multiline is-mobile ">

        <div class="column is-half">
          <h1 class="title">
            <a href="{{$config.BaseUrl}}"><span class="icon has-text-primary is-medium 	"> <i class="fas fa-home"></i></span> </a> {{$reponame}}
          </h1>
        </div>

        <div class="column is-half">
   
        </div>

        <div class="column is-half">

              <h2 class="subtitle">

        List packages and versions available in "{{$reponame}}" repository
             </h2>
        </div>
        <div class="column is-half">
                      <a href="{{$github}}"><span class="icon has-text-dark 	"> <i class="fas fa-code-branch"></i></span> </a>
        </div>
     </div>
    </div>
  </div>
</section>

<div class="container is-mobile">
  <div class="notification is-info">
    {{- if $description }}
    {{$description}}
    {{- else }}
    To enable {{$reponame}} add in /etc/luet/luet.yaml the following:
    <pre><code class="language-yaml">repositories:
  - name: "{{$reponame}}"
    type: "{{$type}}"
    enable: true
    urls:
    - "{{$url}}"</code></pre>
    {{- end }}
  </div>

  <table  data-toggle="table"
    data-search="true"
    data-show-columns="true"
    id="table"  >
    <thead>
  
    <tr>
        <th data-field="name" ><abbr title="Name">Name</abbr></th>
        <th data-field="category" >Category</th>
        <th data-field="version"><abbr title="Version">Version</abbr></th>
      </tr>
    </thead>
    <tfoot>
      <tr>
        <th><abbr title="Name">Name</abbr></th>
        <th>Category</th>
        <th><abbr title="Version">Version</abbr></th>
      </tr>
    </tfoot>

    <tbody>
      {{ range $_, $pack := .Packages }}
        <tr>
          <td class="name"><a href="{{$config.BaseUrl}}/{{$reponame}}/{{$pack.Category}}/{{$pack.Name}}"> {{$pack.Name}}</a></td>
          <td class="category">{{$pack.Category}}</td>
          <td class="version"><a href="{{$config.BaseUrl}}/{{$reponame}}/{{$pack.Category}}/{{$pack.Name}}/{{$pack.Version}}">{{$pack.Version}}</a></td>
          </tr>
      {{end}}
    </tbody>
  </table>


</div>

<script type="text/javascript">
    $("#table").DataTable();
</script>

</body>

